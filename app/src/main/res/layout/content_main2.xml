<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dinesh.contactslist.PersonDetails_Activity"
    tools:showIn="@layout/activity_main2">
    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="160dp"
            android:id="@+id/textView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameofcontact"
            android:text= " Jhon Smith"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="35dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company"
            android:textSize="15dp"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="160dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/companyname"
            android:text="Solstice Mobile"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="90dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:textSize="20dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(000)-000-0000"
            android:id="@+id/number"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="190dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="300dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="15dp"
            android:id="@+id/Addres"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="260dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111 N, Canal"
            android:textColor="#000"
            android:id="@+id/streetddress"
            android:layout_marginTop="275dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:id="@+id/cityaddress"
            android:textColor="#000"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:id="@+id/stateaddress"
            android:layout_toRightOf="@+id/cityaddress"

            android:textColor="#000"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:id="@+id/countryaddress"
            android:layout_toRightOf="@+id/stateaddress"
            android:textColor="#000"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"
            android:id="@+id/Zipaddress"
            android:layout_toRightOf="@+id/countryaddress"
            android:textColor="#000"
            android:layout_marginTop="290dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birthday"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="350dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="December 4, 1980"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="365dp"
            android:id="@+id/textView2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="450dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jsmith@solitice-mobile.com"
            android:textSize="17dp"
            android:id="@+id/personemail"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="465dp"
            android:textColor="#000"/>


        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:id="@+id/ImageOne"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/textView"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
